<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:baselineAligned="false"
    android:background="@color/black">


    <TextView
    android:id="@+id/scoreValue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="37dp"
    android:textSize="15pt"
    android:textColor="#ffffff"
    android:text="@string/scoreVal" />


    <TextView android:id="@+id/myLevelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25pt"
        android:textColor="@color/white1"
        android:textAlignment="center"
        android:layout_marginTop="76dp"
        android:text="@string/levelVal" />
        />


    <Button android:id="@+id/myButton"
        android:textSize="15pt"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:text="@string/custom_button_text"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_above="@+id/highLevelID"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp" />

    <TextView
        android:id="@+id/highLevelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/high_level"
        android:textColor="@color/white1"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/myButton"
        android:textSize="10pt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highLevelID"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/highLevelLabel"
        android:textColor="@color/white1"
        android:textSize="10pt"/>

</RelativeLayout>
